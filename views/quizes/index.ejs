<form action="/quizes" method="get" style="text-align:left; width:250px;">
  <fieldset style="padding:10px; border:0px;">
    <legend>BÃºsqueda de texto:</legend>
   	<input type="text" value="" name="search" />
	<input type="submit" value="Buscar"/>
  </fieldset>
</form>
<table>
	<% var i; for (i = 0; i < quizes.length; i++) { %>
		<tr>
			<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta  %></a></td>
			<%if(session.user){  %>
			<td><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>
			<td>
				<form action="quizes/<%= quizes[i].id %>?_method=delete" method="post">
					<button type="submit" onclick="return confirm('Borrar: <%= quizes[i].pregunta %>')">Borrar</button>
				</form>
			</td>
			<%} %>
		</tr>
	<% }; %>
</table>
<p></p>
<% if(session.user){  %>
<div style="text-align:left;">
<a href="/quizes/new"><button>Crear pregunta</button></a>
</div>
<% } %>